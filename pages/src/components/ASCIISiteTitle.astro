---
import type { Props } from '@astrojs/starlight/props';

// Simple text-based site title
// For custom ASCII art, you can use a library like figlet or create your own
const siteTitle = 'WarcraftNotifications';
---

<a href={`${import.meta.env.BASE_URL}`} class="site-title">
	<span class="site-title-text">{siteTitle}</span>
</a>

<style>
	.site-title {
		display: flex;
		align-items: center;
		text-decoration: none;
		color: var(--sl-color-text);
		font-weight: 600;
		font-size: 1.125rem;
	}

	.site-title:hover {
		color: var(--sl-color-text);
	}

	.site-title-text {
		font-family: var(--__sl-font);
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	@media (min-width: 50rem) {
		.site-title {
			font-size: 1.25rem;
		}
	}
</style>
